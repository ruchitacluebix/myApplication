<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/relative_layout"
    android:background="@color/textInputLayout"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:padding="@dimen/dimen_5dp"
            android:layout_height="150dp"
            android:layout_margin="8dp"/>

        <LinearLayout
            android:id="@+id/pager_dots"
            android:orientation="horizontal"
            android:gravity="center_vertical|center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/logo"
            android:src="@drawable/img1"
            android:layout_height="wrap_content"/>
        <ImageView
            android:layout_width="match_parent"
            android:src="@drawable/nmc_logo"
            android:id="@+id/nmc_logo"
            android:layout_height="@dimen/dimen_120dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slide_title"
            android:id="@+id/txt_title"
            android:visibility="gone"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_25"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_discription"
            android:paddingLeft="@dimen/dimen_40dp"
            android:textStyle="bold"
            android:paddingRight="@dimen/dimen_40dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/font_16" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_margin="@dimen/dimen_3dp"
            android:padding="@dimen/dimen_5dp"
            android:layout_alignParentBottom="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/btn_skip"
                android:gravity="center"
                android:textSize="@dimen/font_14"
                android:textStyle="bold"
                android:id="@+id/txt_skip"
                android:layout_gravity="right"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:padding="@dimen/dimen_5dp"/>

        </LinearLayout>
    </LinearLayout>



</RelativeLayout>