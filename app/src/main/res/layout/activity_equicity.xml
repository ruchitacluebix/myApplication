<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/main_header_selector"
    android:layout_height="match_parent"
    tools:context=".EquicityActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/dark_blue"
        app:popupTheme="@style/Theme.Shrine.PopupOverlay" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/img_back"
            android:src="@drawable/ic_arrow_back"/>
        <TextView
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="@dimen/font_16"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="EQUICITY"/>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:padding="@dimen/dimen_10dp"
        android:layout_margin="@dimen/dimen_10dp"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.button.MaterialButton
            android:layout_width="match_parent"
            style="@style/Widget.Shrine.Button_language"
            android:background="@android:color/white"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:id="@+id/btn_information"
            android:padding="@dimen/dimen_10dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:textSize="@dimen/font_20"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="INFORMATION" />
        <android.support.design.button.MaterialButton

            android:layout_width="match_parent"
            style="@style/Widget.Shrine.Button_language"
            android:background="@android:color/white"
            android:textSize="@dimen/font_20"
            android:id="@+id/btn_public_service_survey"
            android:padding="@dimen/dimen_10dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="PUBLIC SERVICES SURVEY" />
        <android.support.design.button.MaterialButton

            android:layout_width="match_parent"
            style="@style/Widget.Shrine.Button_language"
            android:background="@android:color/white"
            android:textSize="@dimen/font_20"
            android:padding="@dimen/dimen_10dp"
            android:id="@+id/btn_comment"
            android:layout_margin="@dimen/dimen_10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="COMMENTS &amp;SUGGESTIONS" />
        <android.support.design.button.MaterialButton

            android:layout_width="match_parent"
            style="@style/Widget.Shrine.Button_language"
            android:background="@android:color/white"
            android:textSize="@dimen/font_20"
            android:id="@+id/btn_dashboard"
            android:padding="@dimen/dimen_10dp"
            android:layout_margin="@dimen/dimen_10dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="DASHBOARD" />
    </LinearLayout>
</RelativeLayout>