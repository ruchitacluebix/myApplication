<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        card_view:cardMaxElevation="3dp"
        android:id="@+id/card_view"
        android:padding="@dimen/dimen_5dp"
        android:layout_margin="@dimen/dimen_5dp"
        card_view:cardElevation="3dp"
        card_view:cardCornerRadius="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linear_layout"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


            <TextView
                android:id="@+id/txt_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <RadioGroup
                android:id="@+id/price_grp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="8dp" >
            <RadioButton
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/rad_opt_a"
                android:layout_height="wrap_content"/> >
            <RadioButton
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/rad_opt_b"
                android:layout_height="wrap_content" />
            <RadioButton
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/rad_opt_c"
                android:layout_height="wrap_content" />
            <RadioButton
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/rad_opt_d"
                android:layout_height="wrap_content" />
            <RadioButton
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/rad_opt_e"
                android:layout_height="wrap_content" />
            <RadioButton
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/rad_opt_f"
                android:layout_height="wrap_content" />
            <RadioButton
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/rad_opt_g"
                android:layout_height="wrap_content" />
            <RadioButton
                android:visibility="gone"
                android:layout_width="match_parent"
                android:id="@+id/rad_opt_h"
                android:layout_height="wrap_content" />


            </RadioGroup>
<LinearLayout
    android:layout_width="match_parent"
    android:padding="@dimen/dimen_10dp"
    android:layout_margin="@dimen/dimen_10dp"
    android:visibility="gone"
    android:id="@+id/linear_layout_edt"
    android:layout_height="wrap_content"
    android:background="@drawable/comment_background">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/edttext"
                android:background="@null"
                />
</LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>

